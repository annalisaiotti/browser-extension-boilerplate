{
  "manifest_version": 2,
  "name": "nomoreEmoji",
  "version": "0.2",
  "description": "Nomoremoji is a web extension designed to counteract the impoverishment of language caused by the disproportionate use of emojis",
  "homepage_url": "https://github.com/uf0/browser-extension-boileplate",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": ["activeTab", "tabs"],
  "browser_action": {
    "default_icon": "icons/icon-96.png",
    "default_popup": "popup/index.html",
    "default_title": "Click me!",
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/ready.min.js", "index.js"],
      "css": ["style.css"]
    }
  ]
}
